hidden partial modifier_keys
xkb_symbols "lctrl_escape" {
	key <LCTL> { [ Escape ] };
};

partial alphanumeric_keys
xkb_symbols "basic" {

    include "us(basic)"
    name[Group1]= "English (US) (lctrl_escape)";

    include "custom(lctrl_escape)"
};

